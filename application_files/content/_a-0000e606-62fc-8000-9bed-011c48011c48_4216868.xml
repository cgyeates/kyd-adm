            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>a!localVariables(
  local!message: reduce(
    #"_a-0000e606-62fc-8000-9bed-011c48011c48_4216820"(
      currentString: _,
      index: _,
      oldCDT: ri!oldCDT,
      newCDT: ri!newCDT,
      fields: ri!fields,
      fieldNames: ri!fieldNames,
      fieldTypes: ri!fieldTypes
    ),
    "",
    1 + enumerate(length(ri!fields))
  ),
  if(
    lenb(local!message) &gt; 3950,
    left(local!message, 3950) &amp; "... [Truncated]",
    local!message
  )
)</definition>
